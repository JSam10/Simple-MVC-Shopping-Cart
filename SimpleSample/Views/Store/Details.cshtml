@model SimpleSample.Models.Product

@{
    ViewBag.Title = "Product -" + Model.Name;
}

<h2>@Model.Name</h2>
<div id="product-details">
    <h4>Rs. @Model.Price</h4>
    <hr />
    <p> @Model.Description</p>

    <p class="button">
        @Html.ActionLink("Add to Cart", "AddToCart", "ShoppingCart", new { id= Model.ProductID}, "")
    </p>
</div>


